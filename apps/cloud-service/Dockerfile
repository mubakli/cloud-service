#
# Build the docker image with `npx nx docker-build cloud-service`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t cloud-service`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system cloud-service && \
          adduser --system -G cloud-service cloud-service

COPY apps/cloud-service/dist cloud-service/
RUN chown -R cloud-service:cloud-service .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix cloud-service --omit=dev -f install

CMD [ "node", "cloud-service" ]
